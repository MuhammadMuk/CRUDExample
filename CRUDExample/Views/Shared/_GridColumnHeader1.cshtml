@if (ViewBag.CurrentSortBy == ViewBag.ColumnName && ViewBag.CurrentSortOrder == SortOrderOptions.ASC.ToString())
{
	<td>
		<a href="~/persons/index?searchBy=@(ViewBag.CurrentSeacrhBy)
					&&searchString=@(ViewBag.CurrentSearchString)
					&&sortBy=@(ViewBag.ColumnName)&&sortOrder=@(nameof(SortOrderOptions.DESC))">
			@ViewBag.DiplayName
		</a>
		<i class="fa-solid fa-sort-up"></i>
	</td>
}
else if (ViewBag.CurrentSortBy == ViewBag.ColumnName && ViewBag.CurrentSortOrder == SortOrderOptions.DESC.ToString())
{
	<td>
		<a href="~/persons/index?searchBy=@(ViewBag.CurrentSeacrhBy)
					&&searchString=@(ViewBag.CurrentSearchString)
					&&sortBy=@(ViewBag.ColumnName)&&sortOrder=@(nameof(SortOrderOptions.ASC))">
			@ViewBag.DiplayName
		</a>
		<i class="fa-solid fa-sort-down"></i>
	</td>

}
else
{
	<td>
		<a href="~/persons/index?searchBy=@(ViewBag.CurrentSeacrhBy)
					&&searchString=@(ViewBag.CurrentSearchString)
					&&sortBy=@(ViewBag.ColumnName)&&sortOrder=@(nameof(SortOrderOptions.ASC))">
			@(ViewBag.DiplayName)
		</a>
	</td>
}